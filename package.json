{
  "name": "r2-solutions",
  "version": "0.1.0",
  "private": true,
  "scripts": {
    "dev": "next dev",
    "build": "next build --webpack",
    "start": "next start",
    "lint": "next lint",
    "verify": "node scripts/verify-code.mjs",
    "verify:live": "node scripts/verify-site.mjs",
    "deploy": "npm run build && wrangler pages deploy out --project-name=r2-solutions",
    "deploy:preview": "node scripts/deploy-preview.js",
    "deploy:preview:branch": "npm run build && wrangler pages deploy out --project-name=r2-solutions --branch=preview",
    "docker:build": "docker build -t r2-solutions:latest .",
    "docker:run": "docker run -p 3000:80 r2-solutions:latest",
    "docker:compose": "docker-compose up -d",
    "docker:compose:build": "docker-compose up -d --build",
    "docker:stop": "docker-compose down",
    "git:push": "git add . && git commit -m \"Deploy: $(date +%Y-%m-%d)\" && git push origin main"
  },
  "dependencies": {
    "@radix-ui/react-slot": "^1.0.2",
    "class-variance-authority": "^0.7.1",
    "clsx": "^2.0.0",
    "embla-carousel-autoplay": "^8.6.0",
    "embla-carousel-react": "^8.6.0",
    "framer-motion": "^11.0.0",
    "lenis": "^1.3.17",
    "liquid-glass-react": "^1.1.1",
    "next": "16.0.6",
    "qrcode.react": "^4.2.0",
    "react": "19.2.0",
    "react-dom": "19.2.0",
    "react-intersection-observer": "^9.5.3",
    "styled-components": "^6.3.8",
    "tailwind-merge": "^2.2.0"
  },
  "devDependencies": {
    "@tailwindcss/postcss": "^4",
    "@types/node": "^20",
    "@types/react": "^19",
    "@types/react-dom": "^19",
    "baseline-browser-mapping": "^2.9.19",
    "canvas": "^3.2.1",
    "eslint": "^9",
    "eslint-config-next": "16.0.6",
    "sharp": "^0.34.5",
    "tailwindcss": "^4",
    "typescript": "^5",
    "wrangler": "^3.0.0"
  }
}
